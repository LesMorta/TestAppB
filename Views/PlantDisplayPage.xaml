<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestAppB.Views.PlantDisplayPage"
             Title="Отображение растения"
             BackgroundColor="#F5F9F8">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="HeaderLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="#2E7D32"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Margin" Value="0,15,0,5"/>
            </Style>

            <Style x:Key="SubHeaderLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="#43A047"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Margin" Value="0,10,0,20"/>
            </Style>

            <Style x:Key="StatusLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="TextColor" Value="#546E7A"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Margin" Value="0,5,0,20"/>
            </Style>

            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#66BB6A"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="CornerRadius" Value="20"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="Margin" Value="20,10"/>
            </Style>

            <Style x:Key="SectionFrameStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="CornerRadius" Value="15"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Margin" Value="15,10"/>
                <Setter Property="BorderColor" Value="#E0F2F1"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout>
            <!-- Заголовок растения -->
            <Label x:Name="plantNameLabel" 
                   Text="Название растения" 
                   Style="{StaticResource HeaderLabelStyle}"/>

            <Label x:Name="plantStatusLabel"
                   Text="Статус: Не полито" 
                   Style="{StaticResource StatusLabelStyle}"/>

            <!-- Отображение растения -->
            <Frame BackgroundColor="Transparent" 
                   HasShadow="False" 
                   HorizontalOptions="Center"
                   Padding="0"
                   Margin="0,10,0,20">
                <Image x:Name="plantImage" 
                       Source="plant_default_dry.png" 
                       HeightRequest="280" 
                       WidthRequest="280" 
                       Aspect="AspectFit"/>
            </Frame>

            <!-- Кнопка полива -->
            <Button x:Name="waterButton" 
                    Text="Полить растение" 
                    Style="{StaticResource ActionButtonStyle}"
                    Clicked="WaterPlant_Clicked"/>

            <!-- Выбор скина растения -->
            <Frame Style="{StaticResource SectionFrameStyle}" 
                   Margin="15,20,15,10">
                <StackLayout>
                    <Label Text="Выберите вид растения" 
                           Style="{StaticResource SubHeaderLabelStyle}"
                           Margin="0,0,0,15"/>

                    <Grid RowDefinitions="Auto,Auto" 
                          ColumnDefinitions="*,*,*" 
                          HorizontalOptions="Center" 
                          Margin="0,0,0,10">

                        <!-- Первый ряд скинов (3) -->
                        <Frame Grid.Row="0" Grid.Column="0" 
                               BorderColor="#E0F2F1" 
                               CornerRadius="10" 
                               Padding="5" 
                               Margin="5">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="SkinSelected_Tapped" CommandParameter="0"/>
                            </Frame.GestureRecognizers>
                            <Image Source="plant_skin1.png" 
                                   HeightRequest="90" 
                                   Aspect="AspectFit"/>
                        </Frame>

                        <Frame Grid.Row="0" Grid.Column="1" 
                               BorderColor="#E0F2F1" 
                               CornerRadius="10" 
                               Padding="5" 
                               Margin="5">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="SkinSelected_Tapped" CommandParameter="1"/>
                            </Frame.GestureRecognizers>
                            <Image Source="plant_skin2.png" 
                                   HeightRequest="90" 
                                   Aspect="AspectFit"/>
                        </Frame>

                        <Frame Grid.Row="0" Grid.Column="2" 
                               BorderColor="#E0F2F1" 
                               CornerRadius="10" 
                               Padding="5" 
                               Margin="5">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="SkinSelected_Tapped" CommandParameter="2"/>
                            </Frame.GestureRecognizers>
                            <Image Source="plant_skin3.png" 
                                   HeightRequest="90" 
                                   Aspect="AspectFit"/>
                        </Frame>

                        <!-- Второй ряд скинов (2) -->
                        <Frame Grid.Row="1" Grid.Column="0" 
                               BorderColor="#E0F2F1" 
                               CornerRadius="10" 
                               Padding="5" 
                               Margin="5">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="SkinSelected_Tapped" CommandParameter="3"/>
                            </Frame.GestureRecognizers>
                            <Image Source="plant_skin4.png" 
                                   HeightRequest="90" 
                                   Aspect="AspectFit"/>
                        </Frame>

                        <Frame Grid.Row="1" Grid.Column="1" 
                               BorderColor="#E0F2F1" 
                               CornerRadius="10" 
                               Padding="5" 
                               Margin="5">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="SkinSelected_Tapped" CommandParameter="4"/>
                            </Frame.GestureRecognizers>
                            <Image Source="plant_skin5.png" 
                                   HeightRequest="90" 
                                   Aspect="AspectFit"/>
                        </Frame>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Информация о последнем поливе -->
            <Frame Style="{StaticResource SectionFrameStyle}" Margin="15,10,15,20">
                <StackLayout>
                    <Label Text="Информация о поливе" 
                           Style="{StaticResource SubHeaderLabelStyle}"
                           Margin="0,0,0,10"/>

                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto">
                        <Label Grid.Row="0" Grid.Column="0" 
                               Text="Статус: " 
                               FontAttributes="Bold"
                               TextColor="#546E7A"
                               Margin="0,5"/>

                        <Label Grid.Row="0" Grid.Column="1" 
                               x:Name="statusDetailLabel" 
                               Text="Не полито"
                               TextColor="#546E7A"
                               Margin="0,5"/>

                        <Label Grid.Row="1" Grid.Column="0" 
                               Text="Последний полив: " 
                               FontAttributes="Bold"
                               TextColor="#546E7A"
                               Margin="0,5"/>

                        <Label Grid.Row="1" Grid.Column="1" 
                               x:Name="lastWateredLabel" 
                               Text="Нет данных"
                               TextColor="#546E7A"
                               Margin="0,5"/>

                        <Label Grid.Row="2" Grid.Column="0" 
                               Text="Следующий полив: " 
                               FontAttributes="Bold"
                               TextColor="#546E7A"
                               Margin="0,5"/>

                        <Label Grid.Row="2" Grid.Column="1" 
                               x:Name="nextWateringLabel" 
                               Text="Можно полить сейчас"
                               TextColor="#546E7A"
                               Margin="0,5"/>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Кнопки управления -->
            <Button Text="Просмотреть записи" 
                    Style="{StaticResource ActionButtonStyle}"
                    BackgroundColor="#78909C"
                    Clicked="ViewNotes_Clicked"/>
        </StackLayout>
        
    </ScrollView>
</ContentPage>
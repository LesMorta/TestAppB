<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#F5F7FA"
             x:Class="TestAppB.Views.LoginPage">

    <ContentPage.Content>
        <Grid>
            <!-- Фонове оформлення -->
            <BoxView Color="#66bb6a" 
                     HeightRequest="220" 
                     HorizontalOptions="Fill" 
                     VerticalOptions="Start" />

            <StackLayout Padding="20" VerticalOptions="FillAndExpand">
                <!-- Заголовок додатку -->
                <Label Text="Solution Root" 
                       TextColor="White" 
                       FontSize="32" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center"
                       Margin="0,20,0,5" />

                <Label Text="Доглядайте за своїми рослинами" 
                       TextColor="White" 
                       FontSize="16" 
                       HorizontalOptions="Center"
                       Margin="0,0,0,30" />

                <!-- Картка логіну -->
                <Frame CornerRadius="15" 
                       HasShadow="True" 
                       Padding="20" 
                       Margin="0,0,0,20" 
                       BackgroundColor="White">

                    <StackLayout Spacing="20">
                        <Label Text="Вхід" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               TextColor="#424242"
                               HorizontalOptions="Center"
                               Margin="0,0,0,10" />

                        <!-- Поле Email -->
                        <Frame BorderColor="#E0E0E0" 
                               CornerRadius="10" 
                               Padding="10,5" 
                               HasShadow="False">
                            <StackLayout Orientation="Horizontal">
                                <Image Source="email_icon.png" 
                                       WidthRequest="24" 
                                       HeightRequest="24"
                                       VerticalOptions="Center" />
                                <Entry x:Name="emailEntry" 
                                       Placeholder="Введіть email" 
                                       PlaceholderColor="#BDBDBD"
                                       TextColor="#424242"
                                       Keyboard="Email"
                                       HorizontalOptions="FillAndExpand"
                                       BackgroundColor="Transparent" />
                            </StackLayout>
                        </Frame>

                        <!-- Поле Пароль -->
                        <Frame BorderColor="#E0E0E0" 
                               CornerRadius="10" 
                               Padding="10,5" 
                               HasShadow="False">
                            <StackLayout Orientation="Horizontal">
                                <Image Source="lock_icon.png" 
                                       WidthRequest="24" 
                                       HeightRequest="24"
                                       VerticalOptions="Center" />
                                <Entry x:Name="passwordEntry" 
                                       Placeholder="Введіть пароль" 
                                       PlaceholderColor="#BDBDBD"
                                       TextColor="#424242"
                                       IsPassword="True"
                                       HorizontalOptions="FillAndExpand"
                                       BackgroundColor="Transparent" />
                            </StackLayout>
                        </Frame>

                        <!-- Кнопка "Забули пароль?" -->
                        <Label Text="Забули пароль?" 
                               TextColor="#66bb6a" 
                               FontSize="14" 
                               HorizontalOptions="End" />

                        <!-- Кнопка увійти -->
                        <Button Text="Увійти" 
                                BackgroundColor="#66bb6a" 
                                TextColor="White" 
                                FontAttributes="Bold"
                                CornerRadius="25" 
                                HeightRequest="50"
                                Clicked="LoginButton_Clicked" />

                        <!-- Або роздільник -->
                        <StackLayout Orientation="Horizontal" 
                                     HorizontalOptions="FillAndExpand" 
                                     Margin="0,10">
                            <BoxView HeightRequest="1" 
                                     BackgroundColor="#E0E0E0" 
                                     HorizontalOptions="FillAndExpand"
                                     VerticalOptions="Center" />
                            <Label Text="Або" 
                                   TextColor="#9E9E9E" 
                                   FontSize="14" 
                                   Margin="10,0" 
                                   VerticalOptions="Center" />
                            <BoxView HeightRequest="1" 
                                     BackgroundColor="#E0E0E0" 
                                     HorizontalOptions="FillAndExpand"
                                     VerticalOptions="Center" />
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!-- Кнопка реєстрації -->
                <Button Text="Немає акаунту? Зареєструватися" 
                        BackgroundColor="Transparent" 
                        TextColor="#66bb6a" 
                        FontAttributes="Bold"
                        Clicked="GoToRegister_Clicked"
                        BorderWidth="0" />

                <!-- Версія додатку -->
                <Label Text="v1.0.0" 
                       TextColor="#9E9E9E" 
                       FontSize="12" 
                       HorizontalOptions="Center"
                       VerticalOptions="EndAndExpand"
                       Margin="0,0,0,20" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
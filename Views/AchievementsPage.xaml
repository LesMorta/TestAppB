<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestAppB.Views.AchievementsPage">

    <CollectionView x:Name="achievementsView" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10" BackgroundColor="{Binding IsUnlocked, Converter={StaticResource UnlockedToColorConverter}}" ColumnDefinitions="Auto, *, Auto">
                    <Image Source="{Binding Icon}" WidthRequest="40" HeightRequest="40"/>
                    <StackLayout Grid.Column="1">
                        <Label Text="{Binding Title}" FontAttributes="Bold" />
                        <Label Text="{Binding Description}" FontSize="12" TextColor="Gray"/>
                    </StackLayout>
                    <Image Source="check.png" IsVisible="{Binding IsUnlocked}" WidthRequest="24" HeightRequest="24" Grid.Column="2" VerticalOptions="Center"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
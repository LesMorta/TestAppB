<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestAppB.Views.NewsPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="PageTitleStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#2E7D32"/>
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,15,0,5"/>
            </Style>

            <Style x:Key="CategoryLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="BackgroundColor" Value="#66BB6A"/>
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Padding" Value="8,3"/>
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
                <Setter Property="VerticalTextAlignment" Value="Center"/>
            </Style>

            <Style x:Key="NewsCardTitleStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#2E7D32"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="LineBreakMode" Value="TailTruncation"/>
                <Setter Property="MaxLines" Value="2"/>
            </Style>

            <Style x:Key="NewsSummaryStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#546E7A"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="LineBreakMode" Value="TailTruncation"/>
                <Setter Property="MaxLines" Value="2"/>
            </Style>

            <Style x:Key="NewsInfoStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#78909C"/>
                <Setter Property="FontSize" Value="11"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, *">
        <!-- Заголовок страницы -->
        <StackLayout Grid.Row="0">
            <Label Text="📰 Новини та поради" 
                   Style="{StaticResource PageTitleStyle}"/>

            <!-- Категории новостей -->
            <ScrollView Orientation="Horizontal" 
                        HorizontalScrollBarVisibility="Never" 
                        Margin="0,5,0,10">
                <StackLayout Orientation="Horizontal" Spacing="8" Padding="15,0">
                    <Frame BackgroundColor="#66BB6A" 
                           CornerRadius="20" 
                           Padding="12,6" 
                           HasShadow="False">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="CategoryAll_Tapped"/>
                        </Frame.GestureRecognizers>
                        <Label Text="Всі" 
                               TextColor="White" 
                               FontSize="13" 
                               FontAttributes="Bold"
                               x:Name="allCategoryLabel"/>
                    </Frame>

                    <Frame BackgroundColor="#E0F2F1" 
                           CornerRadius="20" 
                           Padding="12,6" 
                           HasShadow="False">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer CommandParameter="Поради" Tapped="Category_Tapped"/>
                        </Frame.GestureRecognizers>
                        <Label Text="Поради" 
                               TextColor="#00796B" 
                               FontSize="13"/>
                    </Frame>

                    <Frame BackgroundColor="#E0F2F1" 
                           CornerRadius="20" 
                           Padding="12,6" 
                           HasShadow="False">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer CommandParameter="Рослини" Tapped="Category_Tapped"/>
                        </Frame.GestureRecognizers>
                        <Label Text="Рослини" 
                               TextColor="#00796B" 
                               FontSize="13"/>
                    </Frame>

                    <Frame BackgroundColor="#E0F2F1" 
                           CornerRadius="20" 
                           Padding="12,6" 
                           HasShadow="False">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer CommandParameter="Лайфхаки" Tapped="Category_Tapped"/>
                        </Frame.GestureRecognizers>
                        <Label Text="Лайфхаки" 
                               TextColor="#00796B" 
                               FontSize="13"/>
                    </Frame>

                    <Frame BackgroundColor="#E0F2F1" 
                           CornerRadius="20" 
                           Padding="12,6" 
                           HasShadow="False">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer CommandParameter="Догляд" Tapped="Category_Tapped"/>
                        </Frame.GestureRecognizers>
                        <Label Text="Догляд" 
                               TextColor="#00796B" 
                               FontSize="13"/>
                    </Frame>

                    <Frame BackgroundColor="#E0F2F1" 
                           CornerRadius="20" 
                           Padding="12,6" 
                           HasShadow="False">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer CommandParameter="Розмноження" Tapped="Category_Tapped"/>
                        </Frame.GestureRecognizers>
                        <Label Text="Розмноження" 
                               TextColor="#00796B" 
                               FontSize="13"/>
                    </Frame>

                    <Frame BackgroundColor="#E0F2F1" 
                           CornerRadius="20" 
                           Padding="12,6" 
                           HasShadow="False">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer CommandParameter="Лікування" Tapped="Category_Tapped"/>
                        </Frame.GestureRecognizers>
                        <Label Text="Лікування" 
                               TextColor="#00796B" 
                               FontSize="13"/>
                    </Frame>

                    <Frame BackgroundColor="#E0F2F1" 
                           CornerRadius="20" 
                           Padding="12,6" 
                           HasShadow="False">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer CommandParameter="DIY" Tapped="Category_Tapped"/>
                        </Frame.GestureRecognizers>
                        <Label Text="DIY" 
                               TextColor="#00796B" 
                               FontSize="13"/>
                    </Frame>
                </StackLayout>
            </ScrollView>

            <BoxView HeightRequest="1" 
                     BackgroundColor="#E0F2F1" 
                     Margin="15,0,15,0"/>
        </StackLayout>

        <!-- Список новостей -->
        <RefreshView Grid.Row="1" 
                     x:Name="newsRefreshView" 
                     RefreshColor="#4CAF50" 
                     IsRefreshing="False" 
                     Command="{Binding RefreshCommand}">
            <CollectionView x:Name="newsCollectionView" 
                           SelectionMode="None" 
                           Margin="0,10,0,0">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White" 
                                Margin="15,0" 
                                CornerRadius="15" 
                                HasShadow="True"
                                Padding="0">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer CommandParameter="{Binding Id}" 
                                                       Tapped="NewsItem_Tapped"/>
                            </Frame.GestureRecognizers>
                            <Grid RowDefinitions="Auto, Auto" 
                                  ColumnDefinitions="*, Auto">
                                <!-- Изображение (если есть) -->
                                <Image Grid.Row="0" 
                                       Grid.ColumnSpan="2" 
                                       Source="{Binding ImageUrl}" 
                                       Aspect="AspectFill" 
                                       HeightRequest="150"/>

                                <!-- Категория -->
                                <Frame Grid.Row="0" 
                                       Grid.Column="0"
                                       BackgroundColor="#4CAF50" 
                                       CornerRadius="10" 
                                       Padding="8,4" 
                                       Margin="10"
                                       VerticalOptions="Start" 
                                       HorizontalOptions="Start" 
                                       HasShadow="False">
                                    <Label Text="{Binding Category}" 
                                           TextColor="White" 
                                           FontSize="11" 
                                           FontAttributes="Bold"/>
                                </Frame>

                                <!-- Метка избранное для выделенных статей -->
                                <Frame Grid.Row="0" 
                                       Grid.Column="1"
                                       IsVisible="{Binding IsFeatured}"
                                       BackgroundColor="#FF9800" 
                                       CornerRadius="10" 
                                       Padding="8,4" 
                                       Margin="10"
                                       VerticalOptions="Start" 
                                       HorizontalOptions="End" 
                                       HasShadow="False">
                                    <Label Text="Топ" 
                                           TextColor="White" 
                                           FontSize="11" 
                                           FontAttributes="Bold"/>
                                </Frame>

                                <!-- Информация о статье -->
                                <StackLayout Grid.Row="1" 
                                             Grid.ColumnSpan="2" 
                                             Padding="15">
                                    <Label Text="{Binding Title}" 
                                           Style="{StaticResource NewsCardTitleStyle}"/>

                                    <Label Text="{Binding Summary}" 
                                           Style="{StaticResource NewsSummaryStyle}" 
                                           Margin="0,5,0,10"/>

                                    <Grid ColumnDefinitions="Auto, *, Auto">
                                        <!-- Автор и дата -->
                                        <StackLayout Grid.Column="0" Orientation="Horizontal">
                                            <Label Text="{Binding Author}" 
                                                   Style="{StaticResource NewsInfoStyle}"/>
                                            <Label Text=" • " 
                                                   Style="{StaticResource NewsInfoStyle}"/>
                                            <Label Text="{Binding PublishedDate, StringFormat='{0:dd MMM}'}" 
                                                   Style="{StaticResource NewsInfoStyle}"/>
                                        </StackLayout>

                                        <!-- Лайки -->
                                        <StackLayout Grid.Column="2" 
                                                     Orientation="Horizontal" 
                                                     HorizontalOptions="End">
                                            <Image Source="like_icon.png" 
                                                   WidthRequest="16" 
                                                   HeightRequest="16" 
                                                   VerticalOptions="Center"/>
                                            <Label Text="{Binding LikesCount}" 
                                                   Style="{StaticResource NewsInfoStyle}" 
                                                   VerticalOptions="Center"/>
                                        </StackLayout>
                                    </Grid>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <!-- Пустое состояние -->
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="CenterAndExpand" 
                                 HorizontalOptions="Center" 
                                 Padding="20">
                        <Image Source="no_news.png" 
                               HeightRequest="120" 
                               Aspect="AspectFit" 
                               Margin="0,0,0,20"/>
                        <Label Text="Новини не знайдено" 
                               FontSize="18" 
                               TextColor="#546E7A" 
                               HorizontalTextAlignment="Center"/>
                        <Label Text="Перевірте підключення до інтернету або спробуйте оновити" 
                               FontSize="14" 
                               TextColor="#78909C" 
                               HorizontalTextAlignment="Center" 
                               Margin="0,10"/>
                        <Button Text="Оновити" 
                                Clicked="RefreshButton_Clicked" 
                                BackgroundColor="#4CAF50" 
                                TextColor="White" 
                                CornerRadius="20" 
                                WidthRequest="150"/>
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </Grid>

</ContentPage>
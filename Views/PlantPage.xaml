<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#eafaf1"
             x:Class="TestAppB.Views.PlantPage">


    <StackLayout Padding="30" VerticalOptions="CenterAndExpand" Spacing="25">

        <Label x:Name="statusLabel"
               TextColor="#2e7d32"
               FontAttributes="Bold"
               FontSize="24"
               HorizontalTextAlignment="Center" />

        <Frame BackgroundColor="White" CornerRadius="25" Padding="25" Margin="20" HasShadow="True">
            <Image x:Name="plantImage"
                   HeightRequest="280"
                   Aspect="AspectFit"
                   Margin="10" />
        </Frame>

        <Button Text="Полить растение" Clicked="WaterButton_Clicked" BackgroundColor="#66bb6a" TextColor="White" />
        <Button Text="Мои растения" Clicked="OpenPlantsPage_Clicked" BackgroundColor="#42a5f5" TextColor="White"/>

        <Label x:Name="lastWateredLabel"
               FontSize="14"
               TextColor="Gray"
               HorizontalTextAlignment="Center" />
    </StackLayout>
</ContentPage>